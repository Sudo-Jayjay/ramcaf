<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ramcaf_blue"
    tools:context=".StaffSetShortStatus">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="-111dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/ramcaf_blue"
                    tools:context=".UserCheckSeat">

                        <ImageView
                            android:id="@+id/imgBGLogo"
                            android:layout_width="227dp"
                            android:layout_height="234dp"
                            android:layout_marginStart="160dp"
                            android:layout_marginTop="30dp"
                            android:layout_marginEnd="15dp"
                            android:layout_marginBottom="470dp"
                            android:alpha="0.5"
                            android:src="@drawable/ramcaf_logo_with_name"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.003" />

                        <TextView
                            android:id="@+id/txtLabelHenlo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="50dp"
                            android:layout_marginEnd="5dp"
                            android:fontFamily="@font/chunkfive_ex"
                            android:text="@string/seatstoDisinfect"
                            android:textAlignment="center"
                            android:textColor="@color/ramcaf_yellow"
                            android:textSize="30sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ListView
                            android:id="@+id/shortStatusList"
                            android:layout_width="370dp"
                            android:layout_height="550dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="5dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/txtLabelHenlo" />

                </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>